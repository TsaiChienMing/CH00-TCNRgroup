<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shifaaz2"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Ast_Login">

    <Button
        android:id="@+id/ast_login_gohome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginStart="@dimen/margin20"
        android:layout_marginTop="@dimen/margin10"
        android:background="@color/cTransparent"
        android:drawableStart="@drawable/carat_l_white"
        android:text="@string/backToHome"
        android:textColor="@color/White"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/linear01"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <TextView
            android:id="@+id/login_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin30"
            android:focusableInTouchMode="false"
            android:fontFamily="sans-serif"
            android:text="@string/big_title"
            android:textColor="@color/White"
            android:textSize="36sp" />

        <Button
            android:id="@+id/ast_login_signin"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ast_login_signup"
            android:layout_alignStart="@+id/login_title"
            android:layout_marginStart="60dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/mini_page"
            android:text="@string/login_b001"
            android:textColor="@color/c5F6E6A"
            android:textSize="18sp"
            android:textStyle="bold|italic" />

        <com.google.android.gms.common.SignInButton
            android:id="@+id/ast_login_google"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ast_login_signin"
            android:layout_alignStart="@+id/login_title"
            android:layout_marginStart="60dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="0dp" >

        </com.google.android.gms.common.SignInButton>

        <TextView
            android:id="@+id/no_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ast_login_signin"
            android:layout_alignStart="@+id/ast_login_signin"
            android:layout_marginStart="45dp"
            android:layout_marginTop="7dp"
            android:gravity="center"
            android:text="@string/noAccount"
            android:textColor="@color/c5F6E6A"
            android:textSize="14sp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/ast_login_signup"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_title"
            android:layout_alignStart="@+id/login_title"
            android:layout_marginStart="60dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/mini_page"
            android:text="@string/login_b002"
            android:textColor="@color/c5F6E6A"
            android:textSize="18sp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/ast_more_accountbtn"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_title"
            android:layout_alignStart="@+id/login_title"
            android:layout_marginStart="60dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/rounded_rectangle"
            android:text="@string/ast_more_accountbtn"
            android:textColor="@color/White"
            android:textSize="18sp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/ast_more_mapbtn"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ast_more_accountbtn"
            android:layout_alignStart="@+id/login_title"
            android:layout_marginStart="60dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/rounded_rectangle"
            android:text="@string/ast_more_mapbtn"
            android:textColor="@color/White"
            android:textSize="18sp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/ast_more_messagebtn"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ast_more_mapbtn"
            android:layout_alignStart="@+id/ast_login_signin"
            android:layout_marginStart="0dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/rounded_rectangle"
            android:text="@string/ast_more_messagebtn"
            android:textColor="@color/White"
            android:textSize="18sp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/ast_login_logout"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ast_more_mapbtn"
            android:layout_alignStart="@+id/ast_login_signin"
            android:layout_alignTop="@+id/ast_more_messagebtn"
            android:layout_marginStart="-5dp"
            android:layout_marginTop="70dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/rounded_rectangle"
            android:text="@string/logout"
            android:textColor="@color/White"
            android:textSize="18sp"
            android:textStyle="bold|italic" />

    </RelativeLayout>

</LinearLayout>