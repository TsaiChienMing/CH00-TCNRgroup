<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/White"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/padding20">

    <EditText
        android:id="@+id/chname_input"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ast_weather_login_account"
        android:layout_alignParentStart="true"
        android:background="@drawable/ask_box"
        android:hint="@string/ast_more_login_account"
        android:inputType="text"
        android:labelFor="@+id/RelativeLayout1"
        android:padding="@dimen/padding15"
        android:text=""
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin20"
        android:layout_marginBottom="@dimen/margin10"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/chname_cancle"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/ast_weather_login_checkbtn"
            android:layout_alignTop="@+id/ast_weather_login_checkbtn"
            android:layout_toEndOf="@+id/ast_weather_login_checkbtn"
            android:background="@drawable/mini_page"
            android:text="@string/ast_more_login_canclebtn"
            android:textColor="@color/c44514D"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/chname_okbtn"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ast_weather_login_password_input"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/margin15"
            android:background="@drawable/rounded_rectangle"
            android:text="@string/ast_more_login_checkbtn"
            android:textColor="@color/White"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>