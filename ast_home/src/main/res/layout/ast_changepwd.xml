<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    android:orientation="vertical"
    android:padding="@dimen/padding15">

    <EditText
        android:id="@+id/ast_pwd_e001"
        android:layout_width="match_parent"
        android:layout_height="45dp"

        android:layout_marginTop="@dimen/margin15"
        android:autofillHints=""
        android:background="@drawable/ask_box"

        android:ems="10"
        android:fontFamily="sans-serif"
        android:gravity="center_vertical"
        android:hint="@string/ast_more_new_changepwd"
        android:inputType="textWebPassword"
        android:paddingStart="@dimen/padding15"
        android:paddingEnd="@dimen/padding15"
        android:textColorHighlight="@color/Teal"
        android:textSize="14sp"
        android:visibility="visible" />

    <EditText
        android:id="@+id/ast_pwd_e002"
        android:layout_width="match_parent"
        android:layout_height="45dp"

        android:layout_marginTop="@dimen/margin15"
        android:autofillHints=""

        android:background="@drawable/ask_box"
        android:ems="10"
        android:gravity="center_vertical"
        android:hint="@string/ast_more_again_changepwd"
        android:inputType="textWebPassword"
        android:paddingStart="@dimen/padding15"
        android:paddingEnd="@dimen/padding15"
        android:textColorHighlight="@color/Teal"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin20"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/ast_pwd_cancel"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/mini_page"
            android:text="@string/ast_more_login_canclebtn"
            android:textColor="@color/c2C302E"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/ast_pwd_btnOK"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin15"
            android:background="@drawable/rounded_rectangle"
            android:text="@string/ast_more_login_okbtn"
            android:textColor="@color/White"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>