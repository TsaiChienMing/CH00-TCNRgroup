<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/padding20">

    <TextView
        android:id="@+id/point_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin10"
        android:text="@string/point_check_text"
        android:textColor="@color/c44514D"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/point_check"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin15"
        android:background="@drawable/ask_box"
        android:padding="@dimen/padding10"
        android:textColor="@color/c44514D"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/point_set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin20"
        android:layout_marginBottom="@dimen/margin10"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/point_calbtn"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/point_check"
            android:layout_toEndOf="@+id/point_okbtn"
            android:background="@drawable/mini_page"
            android:text="@string/group_calbtn"
            android:textColor="@color/c44514D"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/point_okbtn"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/point_check"
            android:layout_marginStart="@dimen/margin15"
            android:background="@drawable/rounded_rectangle"
            android:text="@string/group_okbtn"
            android:textColor="@color/White"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/point_features"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <Button
            android:id="@+id/point_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/margin10"
            android:background="@drawable/rounded_rectangle"
            android:text="@string/group_point_navigation"
            android:textColor="@color/White"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="visible" />

        <Button
            android:id="@+id/point_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin10"
            android:background="@drawable/mini_page"
            android:text="@string/point_cancel"
            android:textColor="@color/c44514D"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="visible" />

        <Button
            android:id="@+id/point_quit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/point_cancel"
            android:layout_marginTop="@dimen/margin10"
            android:background="@drawable/mini_page"
            android:text="@string/point_quit"
            android:textColor="@color/c44514D"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="visible" />
    </LinearLayout>

</LinearLayout>