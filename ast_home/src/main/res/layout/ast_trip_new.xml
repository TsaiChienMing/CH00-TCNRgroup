<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/White"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/Spacing">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="171dp"
        android:layout_gravity="center"
        android:contentDescription="TODO"
        app:srcCompat="@drawable/as_logo512" />

    <EditText
        android:id="@+id/trip_new_e01"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin15"
        android:background="@drawable/ask_box"
        android:ems="10"
        android:hint="@string/trip_new_hint"
        android:inputType="textPersonName"
        android:padding="@dimen/padding15"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin20"
        android:gravity="center"
        android:orientation="vertical">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/trip_new_time"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:background="@android:drawable/editbox_background"
                android:backgroundTint="@color/White"
                android:text="@string/trip_new_time"
                android:textColor="@color/c44514D"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/trip_new_day"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:background="@android:drawable/editbox_background"
                android:backgroundTint="@color/White"
                android:text="@string/trip_new_day"
                android:textColor="@color/c44514D"
                android:textSize="18sp"
                android:textStyle="bold" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/trip_new_b01"
                android:layout_width="135dp"
                android:layout_height="30dp"
                android:layout_marginTop="@dimen/margin10"
                android:background="@android:drawable/editbox_background"
                android:backgroundTint="@color/Silver"
                android:gravity="start|center_vertical"
                android:text="@string/trip_new_hint01"
                android:textColor="@color/c5F6E6A"
                android:textSize="14sp" />

            <Spinner
                android:id="@+id/trip_new_s01"
                android:layout_width="135dp"
                android:layout_height="30dp"
                android:layout_marginTop="@dimen/margin10"
                android:background="@drawable/ask_box"
                android:backgroundTint="@color/Silver"
                android:gravity="start|center_vertical"
                android:spinnerMode="dropdown"
                android:textSize="14sp" />

        </TableRow>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin30"
        android:layout_marginBottom="@dimen/margin10"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/trip_new_b03"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/mini_page"
            android:text="@string/trip_new_cancel"
            android:textColor="@color/c44514D"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/trip_new_b04"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin15"
            android:background="@drawable/rounded_rectangle"
            android:gravity="center"
            android:text="@string/trip_new_ok"
            android:textColor="@color/White"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>