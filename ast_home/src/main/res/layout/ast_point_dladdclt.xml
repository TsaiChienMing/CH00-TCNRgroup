<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="150dp"
    android:background="@color/White"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/padding15">

    <TextView
        android:id="@+id/ast_point_dladdclt_t001"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/ast_point_dladdclt_t001"
        android:textColor="@color/c44514D"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin20"
        android:orientation="horizontal">

        <Button
            android:id="@+id/ast_point_dladdclt_b001"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/mini_page"
            android:text="@string/ast_point_b001"
            android:textColor="@color/c44514D"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/ast_point_dladdclt_b002"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin15"
            android:background="@drawable/rounded_rectangle"
            android:text="@string/ast_point_b002"
            android:textColor="@color/White"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>