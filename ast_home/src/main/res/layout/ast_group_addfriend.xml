<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/White"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/padding20">

    <TextView
        android:id="@+id/friend_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/group_friendemail"
        android:textColor="@color/c44514D"
        android:textSize="18dp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/friend_edit"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin15"
        android:background="@drawable/ask_box"
        android:hint="@string/group_friend_edit"
        android:padding="@dimen/padding15"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin15"
        android:layout_marginBottom="@dimen/margin10"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/friend_calbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/mini_page"
            android:text="@string/group_calbtn"
            android:textColor="@color/c44514D"
            android:textSize="18dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/friend_okbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/margin15"
            android:background="@drawable/rounded_rectangle"
            android:text="@string/group_okbtn"
            android:textColor="@color/White"
            android:textSize="18dp"
            android:textStyle="bold" />
    </LinearLayout>


</LinearLayout>