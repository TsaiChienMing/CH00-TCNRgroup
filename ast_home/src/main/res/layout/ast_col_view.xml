<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin15"
    android:descendantFocusability="blocksDescendants"
    android:gravity="end"
    android:orientation="vertical"
    android:padding="@dimen/pa01">

    <androidx.cardview.widget.CardView
        android:id="@+id/col_view_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp">

        <ImageView
            android:id="@+id/col_view_img1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/trips01" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="4dp">

                <TextView
                    android:id="@+id/col_view_action"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:alpha="40"
                    android:background="@mipmap/delete_icon_bw"
                    android:clickable="true"
                    android:gravity="end" />
            </androidx.cardview.widget.CardView>
        </TableRow>

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/col_view_placename"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin10"
        android:gravity="center"
        android:text="@string/col_view_placename"
        android:textColor="@color/c44514D"
        android:textSize="14sp"
        android:textStyle="bold"
        android:visibility="visible" />

</LinearLayout>