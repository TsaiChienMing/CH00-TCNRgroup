<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="200dp"
    android:background="@color/White"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/margin15">

    <TextView
        android:id="@+id/group_setalert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:text="@string/group_addfolder"
        android:textColor="@color/c44514D"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/group_input_username"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin15"
        android:background="@drawable/ask_box"
        android:backgroundTint="@color/White"
        android:backgroundTintMode="multiply"
        android:ems="10"
        android:hint="@string/group_foldername"
        android:inputType="textPersonName"
        android:padding="@dimen/padding15"
        android:textColor="@android:color/black"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin20"
        android:layout_marginBottom="@dimen/margin10"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/group_florder_calbtn"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/group_florder_okbtn"
            android:background="@drawable/mini_page"
            android:text="@string/group_calbtn"
            android:textColor="@color/c44514D"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/group_florder_okbtn"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin15"
            android:background="@drawable/rounded_rectangle"
            android:text="@string/group_okbtn"
            android:textColor="@color/White"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>