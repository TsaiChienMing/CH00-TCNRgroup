<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/mini_page"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/padding15">

    <TextView
        android:id="@+id/welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin10"
        android:gravity="center"
        android:text="@string/welcome"
        android:textColor="@color/c5F6E6A"
        android:textSize="21sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/signin_username"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/margin20"
        android:background="@drawable/ask_box"
        android:hint="@string/h_username"
        android:paddingStart="@dimen/padding15"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/signin_password"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/margin10"
        android:background="@drawable/ask_box"
        android:hint="@string/h_password"
        android:inputType="textPassword"
        android:paddingStart="@dimen/padding15"
        android:textSize="14sp" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/signin_signin"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin20"
            android:layout_weight="1"
            android:background="@drawable/rounded_rectangle"
            android:text="@string/login_confirm"
            android:textColor="@color/White"
            android:textSize="18sp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/signin_cancle"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin20"
            android:layout_weight="1"
            android:background="@drawable/rounded_rectangle"
            android:text="@string/ast_more_login_canclebtn"
            android:textColor="@color/White"
            android:textSize="18sp"
            android:textStyle="bold|italic" />
    </TableRow>

    <Button
        android:id="@+id/signin_forgot"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin10"
        android:layout_weight="1"
        android:background="@color/cTransparent"
        android:text="@string/login_cancel"
        android:textColor="@color/c5F6E6A"
        android:textSize="14sp" />

</LinearLayout>